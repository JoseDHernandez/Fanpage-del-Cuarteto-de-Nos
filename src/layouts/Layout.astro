---
import "../styles/global.css";
import { ClientRouter } from "astro:transitions";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
interface Props {
  title: string;
}
const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Lexend:wght@100..900&family=Rubik:ital,wght@0,300..900;1,300..900&display=swap"
      rel="stylesheet"
    />
    <meta name="generator" content={Astro.generator} />
    <link rel="icon" href="/favicon.ico" type="image/x-icon" />
    <title>{title}</title>
    <ClientRouter />
  </head>
  <body>
    <Header />
    <div class="container max-w-7xl mx-auto p-6"><slot /></div>
    <Footer />
  </body>
</html>

<style>
  html,
  body {
    position: relative;
    min-height: 100vh;
    font-family: "Rubik", sans-serif;
    font-optical-sizing: auto;
    font-style: normal;
    background-color: #d8f1ff !important;
    scroll-behavior: smooth;
    p {
      font-size: 18px;
      text-wrap: pretty;
      font-weight: 400;
    }
    h1 {
      font-size: clamp(1.75rem, 4vw, 3rem); /* 28px – 48px */
    }
    h2 {
      font-size: clamp(1.5rem, 3.5vw, 2.5rem); /* 24px – 40px */
    }
    h3 {
      font-size: clamp(1.25rem, 3vw, 2rem); /* 20px – 32px */
    }
    h4 {
      font-size: clamp(1.125rem, 2.5vw, 1.5rem); /* 18px – 24px */
    }
    h5 {
      font-size: clamp(1rem, 2vw, 1.25rem); /* 16px – 20px */
    }
    h6 {
      font-size: clamp(0.875rem, 1.5vw, 1rem); /* 14px – 16px */
    }

    small {
      font-size: 14px;
    }
    h1,
    h2,
    h3,
    h4,
    h4,
    h5,
    h6 {
      font-family: "Lexend", sans-serif;
      font-weight: bold;
    }
  }
</style>
