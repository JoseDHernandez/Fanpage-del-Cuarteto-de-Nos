---
import Layout from "../layouts/Layout.astro";
import { Image } from "astro:assets";
import Imagen from "../../public/404.webp";
---

<Layout title="Página no existente">
  <div
    class="min-h-screen flex flex-col items-center justify-center text-center px-4"
  >
    <h1 class="text-5xl font-bold text-gray-800 mb-4">404</h1>
    <p class="text-xl text-gray-600 mb-6">Página no encontrada</p>
    <Image
      src={Imagen}
      alt="Error 404"
      class="max-w-xs mb-6 drop-shadow-lg rounded-lg"
    />
    <a
      href="/"
      class="bg-gray-900 text-white hover:text-yellow-400 transition-colors duration-200 py-2 px-6 font-medium rounded-md shadow-md"
    >
      Volver al inicio
    </a>
  </div>
</Layout>
